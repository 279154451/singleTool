<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_all_contacts_first_letters"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="A"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <View
        android:id="@+id/view_contacts_first_letter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:visibility="gone" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:descendantFocusability="blocksDescendants"
        android:paddingLeft="12dp">
        <ImageView
            android:id="@+id/iv_company_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/tree_ec"
            android:layout_alignParentLeft="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_company_icon"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp">
        <TextView
            android:id="@+id/tv_company_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/selector_contact_name_text"
            android:textSize="15sp"
             />
        <TextView
            android:id="@+id/tv_company_user_number"
            android:layout_below="@id/tv_company_user_name"
            android:textColor="@color/selector_contact_number_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>